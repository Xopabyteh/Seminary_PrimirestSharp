@if (!IsDarkMode)
{
    // Light mode

    <style>
        :root {
            --clr-black: #000000;
            --clr-white: #FFFFFF;
            --clr-accent: #EDEDED;
            --clr-success: #659B5E;
            --clr-secondary: #636363;
            --clr-primary: #007FFF;
            --clr-danger: #BF211E;
        }
    </style>
}
else
{
    // Dark mode

    <style>
        :root {
            --clr-black: #F5F5F5;       /* Lightened black to a soft off-white for text */
            --clr-white: #121212;       /* Darkened white to deep charcoal for background */
            --clr-accent: #1F1F1F;      /* Dark accent, near-black for subtle elements */
            --clr-success: #8BD5A3;     /* Soft, pastel green for a friendly success tone */
            --clr-secondary: #888888;   /* Mid-tone grey for secondary elements */
            --clr-primary: #007FFF; /* Vibrant blue to stand out against dark background */
            --clr-danger: #FF6B6B;      /* Bright, soft red for warnings and errors */
        }

        .button {
            color: var(--clr-black) !important;
        }
    </style>
}