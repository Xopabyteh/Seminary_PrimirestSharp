@if (!IsDarkMode)
{
    // Light mode

    <style>
        :root {
            --clr-black: #000000;
            --clr-white: #FFFFFF;
            --clr-accent: #EDEDED;
            --clr-success: #659B5E;
            --clr-secondary: #636363;
            --clr-primary: #007FFF;
            --clr-danger: #BF211E;
        }
    </style>
}
else
{
    // Dark mode

    <style>
        :root {
                --clr-black: #fff;
                --clr-white: #121212;
                --clr-accent: #1F1F1F;
                --clr-success: #8BD5A3;
                --clr-secondary: #dfdfdf;
                --clr-primary: #007FFF;
                --clr-danger: #FF6B6B;
        }

        .button {
            color: var(--clr-black) !important;
        }
    </style>
}